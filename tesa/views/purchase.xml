<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <!-- VIEW: PURCHASE ORDER FORM -->
    <record id="view_res_purchase_line_form1" model="ir.ui.view">
      <field name="name">purchase.order.line.form.inherit</field>
      <field name="model">purchase.order</field>
      <field name="type">form</field>
      <field name="priority" eval="8"/>
      <field name="inherit_id" ref="purchase.purchase_order_form"/>
      <field name="arch" type="xml">
        <data>
          <!-- Add product buttons -->
          <field name="product_id" position="before">
            <button name="browse_product_id"  icon="STOCK_FIND" type="object"/>
          </field>

          <!-- Add remarks -->
          <field name="date_order" position="after">
            <field name="xremarks" />
          </field>

          <!-- Add person created -->
          <xpath expr="//tree/field[@name='price_subtotal']" position="before">
            <field name="create_uid" />
            <field name="write_uid" />
          </xpath>
        </data>
      </field>
    </record>

    <!-- VIEW: PURCHASE ORDER TREE -->
    <record id="tesa_view_purchase_order_tree" model="ir.ui.view">
      <field name="name">purchase.order.tree.inherited</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_tree"/>
      <field name="arch" type="xml">
        <!-- Add currency -->
        <field name="origin" position="replace">
          <field name="create_uid" />
        </field>

        <!-- Add currency -->
        <field name="state" position="before">
          <field name="currency_id" />
          <field name="xremarks" />
        </field>
      </field>
    </record>

    <!-- VIEW: PURCHASE ORDER LINE TREE -->
    <record id="tesa_view_purchase_order_line_tree" model="ir.ui.view">
      <field name="name">purchase.order.line.tree.inherited</field>
      <field name="model">purchase.order.line</field>
      <field name="inherit_id" ref="purchase.purchase_order_line_tree"/>
      <field name="arch" type="xml">
        <!-- Add order date -->
        <field name="order_id" position="after">
          <field name="date_order" />
        </field>
        <!-- Add currency -->
        <field name="price_unit" position="before">
          <field name="currency_id" />
        </field>
        <!-- Show state -->
        <field name="state" position="replace">
          <field name="state" />
        </field>
      </field>
    </record>

    <!-- VIEW: PURCHASE ORDER LINE FORM -->
    <record id="tesa_view_purchase_order_line_form" model="ir.ui.view">
      <field name="name">purchase.order.line.form.inherited</field>
      <field name="model">purchase.order.line</field>
      <field name="inherit_id" ref="purchase.purchase_order_line_form"/>
      <field name="arch" type="xml">
        <!-- Add order and partner id -->
        <xpath expr="//group" position="before">
          <label for="order_id" class="oe_edit_only"/>
          <h1><field name="order_id" domain="[('state','!=','done')]"/></h1>
          <label for="partner_id" class="oe_edit_only"/>
          <h2><field name="partner_id"/></h2>
        </xpath>
      </field>
    </record>

    <!-- Change the purchase order QWeb template -->
    <template id="report_purchaseorder_document" inherit_id="purchase.report_purchaseorder_document">
      <xpath expr="//div[@class='page']" position="replace">
        <div class="page">
          <div class="oe_structure"/>
          <div class="row">
            <div class="col-xs-6">
              Shipping address :<br/>
              <div t-if="o.dest_address_id">
                <div t-field="o.dest_address_id"
                     t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
                <p t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></p>
              </div>

              <div t-if="o.picking_type_id and o.picking_type_id.warehouse_id">
                <span t-field="o.picking_type_id.warehouse_id.name"/>
                <div t-field="o.picking_type_id.warehouse_id.partner_id"
                     t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
                <p t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></p>
              </div>
            </div>
            <div class="col-xs-5 col-xs-offset-1">
              <div t-field="o.partner_id"
                   t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
            </div>
          </div>

          <h2 t-if="o.state != 'draft'">Purchase Order Confirmation N°<span t-field="o.name"/></h2>
          <h2 t-if="o.state == 'draft'">Request for Quotation N°<span t-field="o.name"/></h2>

          <div class="row mt32 mb32">
            <div t-if="o.name" class="col-xs-3">
              <strong>Our Order Reference:</strong>
              <p t-field="o.name"/>
            </div>
            <div t-if="o.partner_ref" class="col-xs-3">
              <strong>Your Order Reference</strong>
              <p t-field="o.partner_ref"/>
            </div>
            <div t-if="o.date_order" class="col-xs-3">
              <strong>Order Date:</strong>
              <p t-field="o.date_order"/>
            </div>
            <div t-if="o.validator" class="col-xs-3">
              <strong>Validated By:</strong>
              <p t-field="o.validator"/>
            </div>
          </div>

          <div t-if="o.xremarks">
            <strong>Remarks</strong>
            <p t-field="o.xremarks"/>
          </div>

          <table class="table table-condensed">
            <thead>
              <tr>
                <th><strong>Description</strong></th>
                <th><strong>Taxes</strong></th>
                <th class="text-center"><strong>Date Req.</strong></th>
                <th class="text-right"><strong>Qty</strong></th>
                <th class="text-left"><strong>Unit</strong></th>
                <th class="text-right"><strong>Price</strong></th>
                <th class="text-right"><strong>Subtotal</strong></th>
              </tr>
            </thead>
            <tbody>
              <tr t-foreach="o.order_line" t-as="line">
                <td>
                  <span t-field="line.name"/>
                </td>
                <td>
                  <span t-esc="', '.join(map(lambda x: x.description, line.taxes_id))"/>
                </td>
                <td class="text-center">
                  <span t-field="line.date_planned"/>
                </td>
                <td class="text-right">
                  <span t-field="line.product_qty"/>
                </td>
                <td class="text-left">
                  <span t-field="line.product_uom.name" groups="product.group_uom"/>
                </td>
                <td class="text-right">
                  <span t-field="line.price_unit"/>
                </td>
                <td class="text-right">
                  <span t-field="line.price_subtotal"
                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                </td>
              </tr>
            </tbody>
          </table>

          <div class="row">
            <div class="col-xs-4 pull-right">
              <table class="table table-condensed">
                <tr class="border-black">
                  <td><strong>Total Without Taxes</strong></td>
                  <td class="text-right">
                    <span t-field="o.amount_untaxed"
                          t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                  </td>
                </tr>
                <tr>
                  <td>Taxes</td>
                  <td class="text-right">
                    <span t-field="o.amount_tax"
                          t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                  </td>
                </tr>
                <tr class="border-black">
                  <td><strong>Total</strong></td>
                  <td class="text-right">
                    <span t-field="o.amount_total"
                          t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                  </td>
                </tr>
              </table>
            </div>
          </div>

          <p t-field="o.notes"/>
          <div class="oe_structure"/>
        </div>
      </xpath>
    </template>

  </data>
</openerp>
